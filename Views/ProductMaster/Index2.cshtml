@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MyProject.Models.ProductCustomerView>

@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@using (Html.BeginForm("Index2", "ProductMaster", FormMethod.Get))
{
    <table class="table">
        <tr>
            <td align="left">&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td align="center">
                Select Customer &nbsp;
                @Html.DropDownList("ddlCustomers", (IEnumerable<SelectListItem>)ViewData["lstCustomers"], new { style = "width:350px;height:33px" })
            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td align="right">&nbsp;</td>
        </tr>
        <tr>
            <td align="left">&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp; </td>
            <td align="center">
                Select Category &nbsp;
                @Html.DropDownList("ddlCategory", (IEnumerable<SelectListItem>)ViewData["lstCategory"], new { style = "width:350px;height:33px" })
            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td align="right">&nbsp;</td>
        </tr>

    </table>

    <table class="table">
        <tr>
            <td align="left">&nbsp;</td>
            <td>&nbsp; @Html.Hidden("Custid",ViewData["SelCustId"]) @Html.Hidden("CategoryId", ViewData["SelProdCatId"]) </td>
            <td align="center">
                @Html.DropDownList("SearchField", (IEnumerable<SelectListItem>)ViewData["SearchFields"], new { style = "width:150px;height:33px" })
                @Html.DropDownList("SearchCondition", (IEnumerable<SelectListItem>)ViewData["SearchConditions"], new { style = "width:150px;height:33px" })
                @Html.TextBox("SearchText", ViewData["SearchText"] as String, new { style = "width:100px;height:33px" })
                <input type="submit" value="Search" name="command" class="btn btn-default" />
                <input type="submit" value="Clear" name="command" class="btn btn-default" />
            </td>
            <td>&nbsp;</td>
            <td align="right">&nbsp;</td>
        </tr>
        <tr>
            <td align="left">
                @Html.DropDownList("Export", (IEnumerable<SelectListItem>)ViewData["Exports"], new { style = "width:65px;height:33px" })
                <input type="submit" value="Export" name="command" class="btn btn-default" />
            </td>
            <td>&nbsp;</td>
            <td align="center">
                <input type="submit" value="Add New Record" name="command" class="btn btn-default" />
            </td>
            <td>&nbsp;</td>
            <td align="right">
               &nbsp; @Html.DropDownList("PageSize", (IEnumerable<SelectListItem>)ViewData["PageSizes"], new { style = "width:70px;height:33px" })
                <!--<input type="submit" value="Page Size" name="command" class="btn btn-default" />-->
            </td>
        </tr>
    </table>
}

<table class="table">
    <tr>
        <th class="hidden">
            @Html.ActionLink("Product Id", "Index2", new { sortOrder = ViewData["ProductIdSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th>
            @Html.ActionLink("Model", "Index2", new { sortOrder = ViewData["ModelSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th>
           @Html.ActionLink("Price", "Index2", new { sortOrder = ViewData["PriceSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th>
           @Html.ActionLink("Category Id", "Index2", new { sortOrder = ViewData["ProdCatIdSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th>
            @Html.ActionLink("Category", "Index2", new { sortOrder = ViewData["ProdCatDescSortParm"], SearchText = ViewData["SearchText"] })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="hidden">
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prodcatId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProdCatDesc)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new {
            CustId = item.CustId
            })*@
            <a href="@Url.Action("Edit", "ProductMaster", new {ProductId=item.ProductId })">
                <span class='glyphicon glyphicon-pencil'></span>
            </a> |
                @*@Html.ActionLink("Details", "Details", new {
            CustId = item.CustId
            })*@
                <a href="@Url.Action("Details", "ProductMaster", new {ProductId=item.ProductId })">
                    <span class='glyphicon glyphicon-list-alt'></span>
                </a>|
                @*@Html.ActionLink("Delete", "Delete", new {
            CustId = item.CustId
            })*@
            <a href="@Url.Action("Delete", "ProductMaster", new {ProductId=item.ProductId })">
                <span class='glyphicon glyphicon-trash'></span>
            </a>

        </td>
    </tr>
}

</table>

<table class="table">
    <tr>
        <td align="center">
            @Html.PagedListPager(Model, page => Url.Action("Index2", new { page,  sortOrder = ViewData["CurrentSort"], SearchText = ViewData["SearchText"], Custid= ViewData["SelCustId"], CategoryId=ViewData["SelProdCatId"]  }))
        </td>
    </tr>
</table>

@section scripts{
    $("#pageTitle").html("Product Master");
    //alert("in section script");
    $("#ddlCustomers").change(function () {
        var custid = $("#ddlCustomers :selected").val();  //if user select the tournament
        var prodcatid = 0;
        if (custid != 2 && custid !=0)
        {
        window.location = "Index2?Custid=" + custid+ "&CategoryId="+prodcatid;
        }
        //alert("custid"+custid);
        if (custid ==2 || custid==0)
        {
        window.location = "Index1";
        }

    });
    $("#ddlCategory").change(function () {
        var custid = $("#ddlCustomers :selected").val();  //if user select the tournament
        var prodcatid = $("#ddlCategory :selected").val(); 
        if (custid != 2)
        {
        window.location = "Index2?Custid=" + custid+ "&CategoryId="+prodcatid;
        }
    });
    $("#PageSize").change(function () {
        var custid = $("#ddlCustomers :selected").val();  //if user select the tournament
        var prodcatid = $("#ddlCategory :selected").val(); 
        var pagesz = $("#PageSize :selected").val();
        if (custid != 2)
        {
        window.location = "Index2?Custid=" + custid+ "&CategoryId="+prodcatid+"&PageSize="+pagesz+"&command=Page Size";
        }
    
    
    });

}
